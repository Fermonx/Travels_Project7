<section>
    <div id="login" class="login-wrapper d-flex align-items-center">
        <div class="container container-destinos">
            <div class="row d-flex justify-content-center row-contact">
                <div class="col-8 form-login">
                    <div class="contact-message">
                        <h3><i class="far fa-edit"></i> Registro</h3>
                    </div>
                    <div class="logquest"><a href="/views/login">Ya tienes cuenta? Inicia Sesión!</a></div>
                    <hr>
                    <form action="/views/register" method="post">
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <input type="text" class="form-control" id="inputuser" placeholder="Usuario*"  name="username" required>
                            </div>
                            <div class="form-group col-md-12">
                                <input type="email" class="form-control" id="inputemail" placeholder="Correo Electrónico*" name="email" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <input type="password" class="form-control" id="inputPassword1" minlength="6" placeholder="Contraseña*" name="password" required>
                            </div>

                            <div class="form-group col-md-12">
                                <input type="checkbox" id="checkb"><label style="padding-left: 1em; font-size: 0.6em;" >Acepto los terminos y condiciones</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-custom btn-contact disabled" id="regbutton" disabled="disabled" >Registrarme</button>
                        <div id="dvValue"></div>
                    </form>


                </div>
            </div>
        </div>
    </div>


    {{#if userTaken}}
        {{>userTaken}}
    {{/if}}

    {{#if emailTaken}}
        {{>emailTaken}}
    {{/if}}
</section>
